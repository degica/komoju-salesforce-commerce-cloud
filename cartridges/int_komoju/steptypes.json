{
    "step-types": {
        "script-module-step": [
            {
                "@type-id": "custom.komojuRefundStep",
                "@supports-parallel-execution": "true",
                "@supports-site-context": "true",
                "@supports-organization-context": "false",
                "description": "My custom script step type",
                "module": "int_komoju/cartridge/scripts/steps/refundOrderKomoju.js",
                "function": "refundKomoju",
                "transactional": "false",
                "timeout-in-seconds": "900",

                "status-codes": {
                    "status": [
                        {
                            "@code": "ERROR",
                            "description": "Used when the step failed with an error."
                        },
                        {
                            "@code": "FINISHED",
                            "description": "Used when the step finished successfully."
                        },
                        {
                            "@code": "FINISHED_WITH_WARNINGS",
                            "description": "Used when the step finished with warnings."
                        }
                    ]
                }
            },
            {
                "@type-id": "custom.komojuCancelStep",
                "@supports-parallel-execution": "true",
                "@supports-site-context": "true",
                "@supports-organization-context": "false",
                "description": "My custom script step type",
                "module": "int_komoju/cartridge/scripts/steps/cancelOrderKomoju.js",
                "function": "komojuCancelOrder",
                "transactional": "false",
                "timeout-in-seconds": "900",

                "status-codes": {
                    "status": [
                        {
                            "@code": "ERROR",
                            "description": "Used when the step failed with an error."
                        },
                        {
                            "@code": "FINISHED",
                            "description": "Used when the step finished successfully."
                        },
                        {
                            "@code": "FINISHED_WITH_WARNINGS",
                            "description": "Used when the step finished with warnings."
                        }
                    ]
                }
            }
        ]
    }
}
